<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Llama Service List View -->
        <record id="view_llm_llama_service_list" model="ir.ui.view">
            <field name="name">llm.llama.service.list</field>
            <field name="model">llm.llama.service</field>
            <field name="arch" type="xml">
                <list string="Meta Llama Services">
                    <field name="provider_name"/>
                    <field name="api_type"/>
                    <field name="custom_api_url"/>
                </list>
            </field>
        </record>
        
        <!-- Llama Service Form View -->
        <record id="view_llm_llama_service_form" model="ir.ui.view">
            <field name="name">llm.llama.service.form</field>
            <field name="model">llm.llama.service</field>
            <field name="arch" type="xml">
                <form string="Meta Llama Service Configuration">
                    <header>
                        <button name="test_connection" string="Test Connection" type="object" class="btn-primary"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="provider_name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group string="API Configuration">
                                <field name="api_type"/>
                                <field name="custom_api_url" 
                                       invisible="api_type != 'custom'"
                                       required="api_type == 'custom'"/>
                            </group>
                            <group string="Provider Information">
                                <field name="provider_code" readonly="1"/>
                                <field name="provider_name" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Available Models" name="models">
                                <field name="id" invisible="1"/>
                                <group>
                                    <field name="api_type" readonly="1"/>
                                </group>
                                <div class="alert alert-info" role="alert">
                                    <h4 class="alert-heading">Available Llama Models</h4>
                                    <p>This service supports the following Llama models based on your API type:</p>
                                    <ul>
                                        <li><strong>Llama 3.1 8B:</strong> Fast and cost-effective for basic tasks</li>
                                        <li><strong>Llama 3.1 70B:</strong> Balanced performance for complex reasoning</li>
                                        <li><strong>Llama 3.1 405B:</strong> Most capable model for advanced tasks</li>
                                        <li><strong>Llama 2 Series:</strong> 7B, 13B, and 70B parameter models</li>
                                        <li><strong>Mixtral 8x7B:</strong> High-performance mixture-of-experts model</li>
                                        <li><strong>Code Llama 34B:</strong> Specialized for code generation</li>
                                    </ul>
                                </div>
                            </page>
                            <page string="API Documentation" name="documentation">
                                <div class="alert alert-warning" role="alert">
                                    <h4 class="alert-heading">API Setup Required</h4>
                                    <p>To use Meta Llama models, you need to set up API access with one of the following providers:</p>
                                    <ul>
                                        <li><strong>Together AI:</strong> <a href="https://together.ai" target="_blank">https://together.ai</a></li>
                                        <li><strong>Replicate:</strong> <a href="https://replicate.com" target="_blank">https://replicate.com</a></li>
                                        <li><strong>Hugging Face:</strong> <a href="https://huggingface.co" target="_blank">https://huggingface.co</a></li>
                                        <li><strong>Perplexity AI:</strong> <a href="https://perplexity.ai" target="_blank">https://perplexity.ai</a></li>
                                    </ul>
                                    <p>After setting up your API account, configure the provider in the LLM Providers section.</p>
                                </div>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Llama Service Search View -->
        <record id="view_llm_llama_service_search" model="ir.ui.view">
            <field name="name">llm.llama.service.search</field>
            <field name="model">llm.llama.service</field>
            <field name="arch" type="xml">
                <search string="Search Llama Services">
                    <field name="provider_name"/>
                    <field name="api_type"/>
                    <filter string="Together AI" name="together" domain="[('api_type', '=', 'together')]"/>
                    <filter string="Replicate" name="replicate" domain="[('api_type', '=', 'replicate')]"/>
                    <filter string="Hugging Face" name="huggingface" domain="[('api_type', '=', 'huggingface')]"/>
                    <filter string="Perplexity AI" name="perplexity" domain="[('api_type', '=', 'perplexity')]"/>
                    <filter string="Custom API" name="custom" domain="[('api_type', '=', 'custom')]"/>
                    <group expand="0" string="Group By">
                        <filter string="API Type" name="group_by_api_type" context="{'group_by': 'api_type'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Llama Service Action -->
        <record id="action_llm_llama_service" model="ir.actions.act_window">
            <field name="name">Meta Llama Services</field>
            <field name="res_model">llm.llama.service</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Configure Meta Llama services!
                </p>
                <p>
                    Set up Meta Llama model access through various API providers like Together AI, 
                    Replicate, Hugging Face, or Perplexity AI to enable powerful AI capabilities.
                </p>
            </field>
        </record>
        
    </data>
</odoo> 