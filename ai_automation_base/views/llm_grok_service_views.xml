<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Grok Service List View -->
        <record id="view_llm_grok_service_list" model="ir.ui.view">
            <field name="name">llm.grok.service.list</field>
            <field name="model">llm.grok.service</field>
            <field name="arch" type="xml">
                <list string="xAI Grok Services">
                    <field name="provider_name"/>
                    <field name="api_version"/>
                </list>
            </field>
        </record>

        <!-- Grok Service Form View -->
        <record id="view_llm_grok_service_form" model="ir.ui.view">
            <field name="name">llm.grok.service.form</field>
            <field name="model">llm.grok.service</field>
            <field name="arch" type="xml">
                <form string="xAI Grok Service Configuration">
                    <header>
                        <button name="test_connection" string="Test Connection" type="object" class="btn-primary"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="provider_name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group string="API Configuration">
                                <field name="api_version"/>
                            </group>
                            <group string="Provider Information">
                                <field name="provider_code" readonly="1"/>
                                <field name="provider_name" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Available Models" name="models">
                                <field name="id" invisible="1"/>
                                <group>
                                    <field name="api_version" readonly="1"/>
                                </group>
                                <div class="alert alert-info" role="alert">
                                    <h4 class="alert-heading">Available Grok Models</h4>
                                    <p>This service supports the following xAI Grok models:</p>
                                    <ul>
                                        <li><strong>Grok Beta:</strong> Initial model offering with solid performance</li>
                                        <li><strong>Grok 2:</strong> Most advanced model with extended context (32K tokens)</li>
                                        <li><strong>Grok 2 Mini:</strong> Cost-effective version for high-volume tasks</li>
                                        <li><strong>Grok 2 Vision:</strong> Multimodal model for text and image processing</li>
                                        <li><strong>Grok 2 Vision Mini:</strong> Cost-effective multimodal capabilities</li>
                                    </ul>
                                </div>
                            </page>
                            <page string="API Documentation" name="documentation">
                                <div class="alert alert-warning" role="alert">
                                    <h4 class="alert-heading">API Setup Required</h4>
                                    <p>To use xAI Grok models, you need to set up API access with xAI:</p>
                                    <ul>
                                        <li><strong>xAI API:</strong> <a href="https://api.x.ai" target="_blank">https://api.x.ai</a></li>
                                        <li><strong>Documentation:</strong> <a href="https://docs.x.ai" target="_blank">https://docs.x.ai</a></li>
                                    </ul>
                                    <p>After setting up your xAI API account, configure the provider in the LLM Providers section.</p>
                                </div>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Grok Service Search View -->
        <record id="view_llm_grok_service_search" model="ir.ui.view">
            <field name="name">llm.grok.service.search</field>
            <field name="model">llm.grok.service</field>
            <field name="arch" type="xml">
                <search string="Search Grok Services">
                    <field name="provider_name"/>
                    <field name="api_version"/>
                    <filter string="API v1" name="v1" domain="[('api_version', '=', 'v1')]"/>
                    <group expand="0" string="Group By">
                        <filter string="API Version" name="group_by_api_version" context="{'group_by': 'api_version'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Grok Service Action -->
        <record id="action_llm_grok_service" model="ir.actions.act_window">
            <field name="name">xAI Grok Services</field>
            <field name="res_model">llm.grok.service</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Configure xAI Grok services!
                </p>
                <p>
                    Set up xAI Grok model access to enable powerful AI capabilities with extended context
                    and multimodal processing capabilities.
                </p>
            </field>
        </record>

    </data>
</odoo> 