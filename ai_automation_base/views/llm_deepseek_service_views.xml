<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- DeepSeek Service List View -->
        <record id="view_llm_deepseek_service_list" model="ir.ui.view">
            <field name="name">llm.deepseek.service.list</field>
            <field name="model">llm.deepseek.service</field>
            <field name="arch" type="xml">
                <list string="DeepSeek Services">
                    <field name="provider_name"/>
                    <field name="api_type"/>
                    <field name="custom_api_url"/>
                </list>
            </field>
        </record>
        
        <!-- DeepSeek Service Form View -->
        <record id="view_llm_deepseek_service_form" model="ir.ui.view">
            <field name="name">llm.deepseek.service.form</field>
            <field name="model">llm.deepseek.service</field>
            <field name="arch" type="xml">
                <form string="DeepSeek Service Configuration">
                    <header>
                        <button name="test_connection" string="Test Connection" type="object" class="btn-primary"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="provider_name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group string="API Configuration">
                                <field name="api_type"/>
                                <field name="custom_api_url" 
                                       invisible="api_type != 'custom'"
                                       required="api_type == 'custom'"/>
                            </group>
                            <group string="Provider Information">
                                <field name="provider_code" readonly="1"/>
                                <field name="provider_name" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Available Models" name="models">
                                <field name="id" invisible="1"/>
                                <group>
                                    <field name="api_type" readonly="1"/>
                                </group>
                                <div class="alert alert-info" role="alert">
                                    <h4 class="alert-heading">Available DeepSeek Models</h4>
                                    <p>This service supports the following DeepSeek models based on your API type:</p>
                                    <ul>
                                        <li><strong>DeepSeek Chat:</strong> General purpose chat model with 32K context</li>
                                        <li><strong>DeepSeek Coder:</strong> Specialized for code generation and programming tasks</li>
                                        <li><strong>DeepSeek Coder Instruct:</strong> Instruction-tuned version for code generation</li>
                                        <li><strong>DeepSeek Coder 33B Instruct:</strong> Large model for complex coding tasks</li>
                                        <li><strong>DeepSeek Coder 6.7B Instruct:</strong> Medium-sized model for code generation</li>
                                        <li><strong>DeepSeek Coder 1.3B Instruct:</strong> Small, fast model for basic code generation</li>
                                        <li><strong>DeepSeek LLM 7B Chat:</strong> 7B parameter chat model</li>
                                        <li><strong>DeepSeek LLM 67B Chat:</strong> 67B parameter chat model for complex reasoning</li>
                                        <li><strong>DeepSeek Math 7B Instruct:</strong> Specialized for mathematical reasoning</li>
                                        <li><strong>DeepSeek Math 67B Instruct:</strong> Large model for advanced mathematics</li>
                                    </ul>
                                </div>
                            </page>
                            <page string="API Documentation" name="documentation">
                                <div class="alert alert-warning" role="alert">
                                    <h4 class="alert-heading">API Setup Required</h4>
                                    <p>To use DeepSeek models, you need to set up API access with one of the following providers:</p>
                                    <ul>
                                        <li><strong>DeepSeek AI:</strong> <a href="https://platform.deepseek.com" target="_blank">https://platform.deepseek.com</a></li>
                                        <li><strong>Together AI:</strong> <a href="https://together.ai" target="_blank">https://together.ai</a></li>
                                        <li><strong>Replicate:</strong> <a href="https://replicate.com" target="_blank">https://replicate.com</a></li>
                                        <li><strong>Hugging Face:</strong> <a href="https://huggingface.co" target="_blank">https://huggingface.co</a></li>
                                    </ul>
                                    <p>After setting up your API account, configure the provider in the LLM Providers section.</p>
                                </div>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- DeepSeek Service Search View -->
        <record id="view_llm_deepseek_service_search" model="ir.ui.view">
            <field name="name">llm.deepseek.service.search</field>
            <field name="model">llm.deepseek.service</field>
            <field name="arch" type="xml">
                <search string="Search DeepSeek Services">
                    <field name="provider_name"/>
                    <field name="api_type"/>
                    <filter string="DeepSeek AI" name="deepseek" domain="[('api_type', '=', 'deepseek')]"/>
                    <filter string="Together AI" name="together" domain="[('api_type', '=', 'together')]"/>
                    <filter string="Replicate" name="replicate" domain="[('api_type', '=', 'replicate')]"/>
                    <filter string="Hugging Face" name="huggingface" domain="[('api_type', '=', 'huggingface')]"/>
                    <filter string="Custom API" name="custom" domain="[('api_type', '=', 'custom')]"/>
                    <group expand="0" string="Group By">
                        <filter string="API Type" name="group_by_api_type" context="{'group_by': 'api_type'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- DeepSeek Service Action -->
        <record id="action_llm_deepseek_service" model="ir.actions.act_window">
            <field name="name">DeepSeek Services</field>
            <field name="res_model">llm.deepseek.service</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_llm_deepseek_service_list"/>
            <field name="search_view_id" ref="view_llm_deepseek_service_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first DeepSeek service configuration
                </p>
                <p>
                    Configure DeepSeek AI models for text generation, chat completion, and code generation tasks.
                    DeepSeek offers specialized models for coding, mathematics, and general conversation.
                </p>
            </field>
        </record>
        
    </data>
</odoo> 